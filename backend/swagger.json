{
  "openapi": "3.0.0",
  "info": {
    "title": "User Management API",
    "version": "1.0.0",
    "description": "Projeto de Gerenciamento de Usu치rio 游눹游깷"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        }
      },
      "SuccessMessage": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "Usuario": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nome": { "type": "string" },
          "email": { "type": "string" },
          "is_active": { "type": "boolean" },
          "last_login": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        }
      },
      "UsuarioCreate": {
        "type": "object",
        "required": ["nome", "email", "senha"],
        "properties": {
          "nome": { "type": "string" },
          "email": { "type": "string" },
          "senha": { "type": "string" }
        }
      },
      "UsuarioUpdate": {
        "type": "object",
        "required": ["nome", "email", "senha"],
        "properties": {
          "nome": { "type": "string" },
          "email": { "type": "string" },
          "senha": { "type": "string" }
        }
      },
      "UsuarioPatch": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "email": { "type": "string" },
          "senha": { "type": "string" }
        }
      },
      "Login": {
        "type": "object",
        "required": ["email", "senha"],
        "properties": {
          "email": { "type": "string" },
          "senha": { "type": "string" }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "token": { "type": "string" },
          "usuario": {
            "type": "object",
            "properties": {
              "id": { "type": "integer" },
              "nome": { "type": "string" },
              "email": { "type": "string" }
            }
          }
        }
      },
      "MagicLinkRequest": {
        "type": "object",
        "required": ["email"],
        "properties": { "email": { "type": "string" } }
      },
      "MagicLinkResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" },
          "Link": { "type": "string" },
          "TokenJwt": { "type": "string" }
        }
      }
    }
  },
  "paths": {
    "/auth/magic": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Request magic link authentication",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MagicLinkRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Magic link enviado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MagicLinkResponse" }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Login do usu치rio",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Login" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/LoginResponse" }
              }
            }
          }
        }
      }
    },
    "/auth/validate": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Validar token JWT",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Token v치lido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "valid": { "type": "boolean" },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer" },
                        "email": { "type": "string" },
                        "is_active": { "type": "boolean" }
                      }
                    },
                    "token_info": {
                      "type": "object",
                      "properties": {
                        "issued_at": { "type": "string" },
                        "expires_at": { "type": "string" },
                        "expires_in_seconds": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/check": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Verifica칞칚o simples de token",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Resultado da verifica칞칚o",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "valid": { "type": "boolean" } }
                }
              }
            }
          }
        }
      }
    },
    "/usuarios": {
      "post": {
        "tags": ["Users"],
        "summary": "Criar novo usu치rio",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UsuarioCreate" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usu치rio criado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SuccessMessage" }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "Listar todos usu치rios",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista de usu치rios",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Usuario" }
                }
              }
            }
          }
        }
      }
    },
    "/usuarios/{id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Buscar usu치rio por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Dados do usu치rio",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Usuario" }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Atualizar usu치rio",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UsuarioUpdate" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usu치rio atualizado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SuccessMessage" }
              }
            }
          }
        }
      },
      "patch": {
        "tags": ["Users"],
        "summary": "Atualiza칞칚o parcial",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UsuarioPatch" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usu치rio atualizado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SuccessMessage" }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Remover usu치rio",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Usu치rio removido",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SuccessMessage" }
              }
            }
          }
        }
      }
    }
  }
}
